{% liquid
  assign section_id = 'stained-window-' | append: section.id
  assign using_image = false
  if section.settings.background_style == 'image' and section.settings.background_image != blank
    assign using_image = true
  endif
  assign glass_color = section.settings.glass_tint
  if glass_color == blank
    assign glass_color = '#ffffff'
  endif
  assign glass_rgb = glass_color | color_to_rgb | remove: 'rgb(' | remove: ')'
  assign overlay_color = section.settings.overlay_color
  if overlay_color == blank
    assign overlay_color = '#0b1424'
  endif
  assign overlay_rgb = overlay_color | color_to_rgb
  assign glass_opacity = section.settings.glass_opacity | times: 0.01
  assign overlay_opacity = section.settings.overlay_opacity | times: 0.01
  assign overlay_strength = section.settings.overlay_strength | times: 0.01
  assign glass_alignment = 'center'
  assign text_color = section.settings.text_color
  if text_color == blank
    assign text_color = '#ffffff'
  endif
  assign text_rgb = text_color | color_to_rgb
  assign text_horizontal_position = section.settings.text_horizontal_position | default: 'center'
  assign glass_padding = section.settings.glass_padding | default: 50
  assign text_spacing = section.settings.text_spacing | default: 20
  assign hover_opacity_effect = section.settings.hover_opacity_effect | default: false
%}
{%- capture custom_properties -%}
  --stained-window-min-height: {{ section.settings.section_min_height }}px;
  --stained-window-glass-opacity: {{ glass_opacity }};
  --stained-window-glass-color: {{ glass_rgb }};
  --stained-window-blur: {{ section.settings.glass_blur }}px;
  --stained-window-overlay-color: {{ overlay_rgb }};
  --stained-window-overlay-opacity: {{ overlay_opacity }};
  --stained-window-overlay-strength: {{ overlay_strength }};
  --stained-window-glass-alignment: {{ glass_alignment }};
  --stained-window-text-color: {{ text_rgb }};
  --stained-window-text-position: {{ text_horizontal_position }};
  --stained-window-glass-padding: {{ glass_padding }}px;
  --stained-window-text-spacing: {{ text_spacing }}px;
  --stained-window-hover-effect: {{ hover_opacity_effect }};
{%- endcapture -%}
{%- capture background_styles -%}
  background-color: {{ section.settings.background_color | default: 'rgb(var(--color-background))' }};
  {% if using_image %}
    background-image: url({{ section.settings.background_image | image_url: width: 3840 }});
    background-size: cover;
    background-position: center;
  {% endif %}
{%- endcapture -%}
<section id="{{ section_id }}" class="stained-window color-{{ section.settings.color_scheme }} gradient{% if using_image %} stained-window--image{% endif %} stained-window--text-{{ text_horizontal_position }}{% if hover_opacity_effect %} stained-window--hover-effect{% endif %}" style="{{ custom_properties | strip_newlines | strip }} {{ background_styles | strip_newlines | strip }}">
  {% if using_image and section.settings.overlay_opacity > 0 %}
    <div class="stained-window__overlay" aria-hidden="true"></div>
  {% endif %}
  <div class="stained-window__frame">
    <div class="stained-window__glass">
      <div class="stained-window__content">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'heading' %}
              {% if block.settings.heading != blank %}
                <{{ block.settings.heading_level }} class="stained-window__heading {{ block.settings.heading_level }}" {{ block.shopify_attributes }}>
                  {{ block.settings.heading | escape }}
                </{{ block.settings.heading_level }}>
              {% endif %}
            {% when 'text' %}
              {% if block.settings.text != blank %}
                <div class="stained-window__text rte" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </div>
              {% endif %}
            {% when 'button' %}
              {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                <a
                  class="stained-window__button button{% if block.settings.button_style == 'secondary' %} button--secondary{% elsif block.settings.button_style == 'outline' %} button--tertiary{% endif %}"
                  href="{{ block.settings.button_link }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  #{{ section_id }} {
    position: relative;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: var(--stained-window-min-height);
    padding: 0;
  }

  #{{ section_id }} .stained-window__overlay {
    position: absolute;
    inset: 0;
    background: rgba(var(--stained-window-overlay-color), calc(var(--stained-window-overlay-opacity) * var(--stained-window-overlay-strength)));
    pointer-events: none;
    mix-blend-mode: multiply;
  }

  #{{ section_id }} .stained-window__frame {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #{{ section_id }} .stained-window__glass {
    position: relative;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--stained-window-glass-padding);
    margin: 0;
    border-radius: 0;
    background: linear-gradient(
      135deg,
      rgba(var(--stained-window-glass-color), clamp(0, calc(var(--stained-window-glass-opacity) + 0.2), 1)) 0%,
      rgba(var(--stained-window-glass-color), var(--stained-window-glass-opacity)) 100%
    );
    -webkit-backdrop-filter: blur(var(--stained-window-blur));
    backdrop-filter: blur(var(--stained-window-blur));
    border: 1px solid rgba(var(--color-foreground), 0.18);
    border-left: none;
    border-right: none;
    box-shadow: 0 2.4rem 6rem rgba(var(--color-foreground), 0.12);
    overflow: hidden;
    z-index: 1;
  }

  #{{ section_id }} .stained-window__glass::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 0;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.65) 0%, rgba(255, 255, 255, 0.15) 45%, rgba(255, 255, 255, 0) 100%);
    mix-blend-mode: screen;
    opacity: 0.85;
    pointer-events: none;
  }

  #{{ section_id }} .stained-window__content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: var(--stained-window-text-spacing);
    width: min(100%, 58rem);
    text-align: center;
  }

  #{{ section_id }}.stained-window--text-left .stained-window__content {
    align-items: flex-start;
    text-align: left;
    justify-content: flex-start;
  }

  #{{ section_id }}.stained-window--text-center .stained-window__content {
    align-items: center;
    text-align: center;
    justify-content: center;
  }

  #{{ section_id }}.stained-window--text-right .stained-window__content {
    align-items: flex-end;
    text-align: right;
    justify-content: flex-end;
  }

  #{{ section_id }} .stained-window__heading {
    letter-spacing: 0.02em;
    color: rgb(var(--stained-window-text-color));
    margin: 0;
    padding: 0;
  }

  #{{ section_id }} .stained-window__text {
    color: rgba(var(--stained-window-text-color), 0.9);
    margin: 0;
    padding: 0;
  }

  #{{ section_id }} .stained-window__text p {
    margin: 0;
    padding: 0;
  }

  #{{ section_id }} .stained-window__button {
    align-self: center;
    min-width: 0;
    margin: 0;
  }

  /* Hover opacity effect */
  #{{ section_id }}.stained-window--hover-effect .stained-window__glass {
    transition: background 0.3s ease, backdrop-filter 0.3s ease;
  }

  #{{ section_id }}.stained-window--hover-effect .stained-window__glass:hover {
    background: rgba(var(--stained-window-glass-color), 0.95);
    -webkit-backdrop-filter: blur(2px);
    backdrop-filter: blur(2px);
  }

  #{{ section_id }}.stained-window--hover-effect .stained-window__glass:hover::after {
    opacity: 0.3;
  }

  @media screen and (max-width: 989px) {
    #{{ section_id }} .stained-window__glass {
      width: 100vw;
    }
  }

  @media screen and (max-width: 749px) {
    #{{ section_id }} .stained-window__glass {
      width: 100vw;
      border-radius: 0;
    }

    #{{ section_id }} .stained-window__glass::after {
      border-radius: 0;
      background: linear-gradient(180deg, rgba(255, 255, 255, 0.75) 0%, rgba(255, 255, 255, 0.25) 45%, rgba(255, 255, 255, 0) 100%);
      opacity: 0.9;
    }

    #{{ section_id }} .stained-window__content {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Stained Window",
  "tag": "section",
  "class": "section stained-window-section",
  "settings": [
    {
      "type": "select",
      "id": "background_style",
      "label": "Background style",
      "default": "color",
      "options": [
        {
          "value": "color",
          "label": "Solid color"
        },
        {
          "value": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#edf1f9"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Image overlay color",
      "default": "#0b1424"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Image overlay opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "default": 35
    },
    {
      "type": "range",
      "id": "section_min_height",
      "label": "Section minimum height",
      "min": 320,
      "max": 900,
      "step": 20,
      "unit": "px",
      "default": 560
    },
    {
      "type": "range",
      "id": "glass_blur",
      "label": "Glass blur",
      "min": 6,
      "max": 30,
      "step": 2,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "glass_opacity",
      "label": "Glass opacity",
      "min": 25,
      "max": 95,
      "step": 5,
      "unit": "%",
      "default": 70
    },
    {
      "type": "color",
      "id": "glass_tint",
      "label": "Glass tint",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "overlay_strength",
      "label": "Overlay color strength",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "%",
      "default": 100
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_horizontal_position",
      "label": "Text position within glass element",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "range",
      "id": "glass_padding",
      "label": "Glass element padding",
      "min": 20,
      "max": 120,
      "step": 10,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "text_spacing",
      "label": "Space between text elements",
      "min": 0,
      "max": 60,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "checkbox",
      "id": "hover_opacity_effect",
      "label": "Enable hover opacity effect",
      "info": "Glass becomes fully opaque on hover",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "select",
          "id": "heading_level",
          "label": "Heading size",
          "default": "h1",
          "options": [
            {
              "value": "h1",
              "label": "Large"
            },
            {
              "value": "h2",
              "label": "Medium"
            },
            {
              "value": "h3",
              "label": "Small"
            }
          ]
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Translucent craftsmanship"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>A medley of brushed metals, sunlit enamel, and sea-glass hues combine to frame our most intricate pieces.</p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Explore the atelier"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "default": "primary",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "outline",
              "label": "Outline"
            }
          ]
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Stained Window",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
