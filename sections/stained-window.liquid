{% liquid
  assign section_id = 'stained-window-' | append: section.id
  assign using_image = section.settings.background_style == 'image' and section.settings.background_image != blank
  assign glass_color = section.settings.glass_tint
  if glass_color == blank
    assign glass_color = '#ffffff'
  endif
  assign glass_rgb = glass_color | color_to_rgb
  assign overlay_color = section.settings.overlay_color
  if overlay_color == blank
    assign overlay_color = '#0b1424'
  endif
  assign overlay_rgb = overlay_color | color_to_rgb
  assign glass_opacity = section.settings.glass_opacity | times: 0.01
  assign overlay_opacity = section.settings.overlay_opacity | times: 0.01
%}
{%- capture custom_properties -%}
  --stained-window-min-height: {{ section.settings.section_min_height }}px;
  --stained-window-glass-opacity: {{ glass_opacity }};
  --stained-window-glass-color: {{ glass_rgb }};
  --stained-window-blur: {{ section.settings.glass_blur }}px;
  --stained-window-overlay-color: {{ overlay_rgb }};
  --stained-window-overlay-opacity: {{ overlay_opacity }};
{%- endcapture -%}
{%- capture background_styles -%}
  background-color: {{ section.settings.background_color | default: 'rgb(var(--color-background))' }};
  {% if using_image %}
    background-image: url({{ section.settings.background_image | image_url: width: 3840 }});
    background-size: cover;
    background-position: center;
  {% endif %}
{%- endcapture -%}
<section id="{{ section_id }}" class="stained-window color-{{ section.settings.color_scheme }} gradient{% if using_image %} stained-window--image{% endif %}" style="{{ custom_properties | strip_newlines | strip }} {{ background_styles | strip_newlines | strip }}">
  {% if using_image and section.settings.overlay_opacity > 0 %}
    <div class="stained-window__overlay" aria-hidden="true"></div>
  {% endif %}
  <div class="stained-window__frame">
    <div class="stained-window__glass">
      <div class="stained-window__content">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'heading' %}
              {% if block.settings.heading != blank %}
                <{{ block.settings.heading_level }} class="stained-window__heading {{ block.settings.heading_level }}" {{ block.shopify_attributes }}>
                  {{ block.settings.heading | escape }}
                </{{ block.settings.heading_level }}>
              {% endif %}
            {% when 'text' %}
              {% if block.settings.text != blank %}
                <div class="stained-window__text rte" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </div>
              {% endif %}
            {% when 'button' %}
              {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                <a
                  class="stained-window__button button{% if block.settings.button_style == 'secondary' %} button--secondary{% elsif block.settings.button_style == 'outline' %} button--tertiary{% endif %}"
                  href="{{ block.settings.button_link }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  #{{ section_id }} {
    position: relative;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: var(--stained-window-min-height);
    padding: clamp(3.2rem, 7vw, 6rem) 1.6rem;
  }

  #{{ section_id }} .stained-window__overlay {
    position: absolute;
    inset: 0;
    background: rgba(var(--stained-window-overlay-color), var(--stained-window-overlay-opacity));
    pointer-events: none;
    mix-blend-mode: multiply;
  }

  #{{ section_id }} .stained-window__frame {
    position: relative;
    width: min(120rem, 100%);
    display: flex;
    justify-content: center;
    align-items: stretch;
  }

  #{{ section_id }} .stained-window__glass {
    position: relative;
    flex: 0 1 60%;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: var(--stained-window-min-height);
    padding: clamp(3.2rem, 6vw, 7rem);
    text-align: center;
    border-radius: clamp(2rem, 3vw, 3.6rem);
    background: linear-gradient(
      135deg,
      rgba(var(--stained-window-glass-color), clamp(0, calc(var(--stained-window-glass-opacity) + 0.2), 1)) 0%,
      rgba(var(--stained-window-glass-color), var(--stained-window-glass-opacity)) 100%
    );
    -webkit-backdrop-filter: blur(var(--stained-window-blur));
    backdrop-filter: blur(var(--stained-window-blur));
    border: 1px solid rgba(var(--color-foreground), 0.18);
    box-shadow: 0 2.4rem 6rem rgba(var(--color-foreground), 0.12);
    overflow: hidden;
  }

  #{{ section_id }} .stained-window__glass::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.35) 0%, rgba(255, 255, 255, 0) 45%);
    mix-blend-mode: screen;
    opacity: 0.55;
    pointer-events: none;
  }

  #{{ section_id }} .stained-window__content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: clamp(1.2rem, 2vw, 2.4rem);
    width: min(100%, 58rem);
    margin: 0 auto;
  }

  #{{ section_id }} .stained-window__heading {
    letter-spacing: 0.02em;
  }

  #{{ section_id }} .stained-window__text {
    color: rgba(var(--color-foreground), 0.82);
  }

  #{{ section_id }} .stained-window__button {
    align-self: center;
    min-width: 0;
  }

  @media screen and (max-width: 989px) {
    #{{ section_id }} .stained-window__glass {
      flex-basis: 75%;
    }
  }

  @media screen and (max-width: 749px) {
    #{{ section_id }} {
      padding: clamp(2.4rem, 8vw, 4rem) 1.2rem;
    }

    #{{ section_id }} .stained-window__glass {
      flex-basis: 100%;
      min-height: calc(var(--stained-window-min-height) * 0.85);
      padding: clamp(2.4rem, 9vw, 4.8rem);
    }

    #{{ section_id }} .stained-window__content {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Stained Window",
  "tag": "section",
  "class": "section stained-window-section",
  "settings": [
    {
      "type": "select",
      "id": "background_style",
      "label": "Background style",
      "default": "color",
      "options": [
        {
          "value": "color",
          "label": "Solid color"
        },
        {
          "value": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#edf1f9"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Image overlay color",
      "default": "#0b1424"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Image overlay opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "default": 35
    },
    {
      "type": "range",
      "id": "section_min_height",
      "label": "Section minimum height",
      "min": 320,
      "max": 900,
      "step": 20,
      "unit": "px",
      "default": 560
    },
    {
      "type": "range",
      "id": "glass_blur",
      "label": "Glass blur",
      "min": 6,
      "max": 30,
      "step": 2,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "glass_opacity",
      "label": "Glass opacity",
      "min": 25,
      "max": 95,
      "step": 5,
      "unit": "%",
      "default": 68
    },
    {
      "type": "color",
      "id": "glass_tint",
      "label": "Glass tint",
      "default": "#ffffff"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "select",
          "id": "heading_level",
          "label": "Heading size",
          "default": "h1",
          "options": [
            {
              "value": "h1",
              "label": "Large"
            },
            {
              "value": "h2",
              "label": "Medium"
            },
            {
              "value": "h3",
              "label": "Small"
            }
          ]
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Translucent craftsmanship"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>A medley of brushed metals, sunlit enamel, and sea-glass hues combine to frame our most intricate pieces.</p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Explore the atelier"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "default": "primary",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "outline",
              "label": "Outline"
            }
          ]
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Stained Window",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
